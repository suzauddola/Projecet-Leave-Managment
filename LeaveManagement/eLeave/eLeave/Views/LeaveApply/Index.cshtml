
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "";
}

<section>
    <form ng-controller="LoginController" action="/" method="post" class="form-horizontal">
        <div class="form-group">
            <h3 class="control-label col-sm-3">Leave Apply Form</h3>
            @*<h2>Leave Apply Form</h2>*@
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="leaveType">Leave Type:</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="leaveType" placeholder="Select Leave">*@
                <select ng-model="selectedName" ng-options="x for x in names"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="applyDate">Application Date:</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="applyDate" placeholder="Select Apply Date">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="startDate">Start Date:</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="startDate" placeholder="Select Start Date">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="endDate">Application Date:</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="endDate" placeholder="Select Emd Date">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="purpose">Purpose:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="purpose" placeholder="Select Emd Date">
            </div>
        </div>

    </form>
    
</section>
